<body>
    <h1>Text Encoder and Decoder</h1>

    <div class="container">
        <div>
            <h2>Encoder</h2>
            <textarea id="inputText" placeholder="Enter English text"></textarea>
            <button onclick="encodeText()">Encode</button>
            <br>
            <p>Encoded Text:</p>
            <textarea id="encodedText" readonly></textarea>
        </div>

        <div>
            <h2>Decoder</h2>
            <textarea id="encodedText2" placeholder="Paste the encoded text here"></textarea>
            <button onclick="decodeText()">Decode</button>
            <br>
            <p>Decoded Text:</p>
            <textarea id="decodedText" readonly></textarea>
        </div>
    </div>

    <!-- Background Animation -->
    <div class="animated-background"></div>
    
    <!-- Name -->
    <div class="name">Akshat</div>

    <script>
        // Function to encode text to numbers
        function encodeText() {
            const inputText = document.getElementById("inputText").value;
            const encodedText = inputText.split('').map(char => char.charCodeAt(0)).join(',');
            document.getElementById("encodedText").value = encodedText;
        }

        // Function to decode numbers from the provided text
        function decodeText() {
            const encodedText = document.getElementById("encodedText2").value;
            const encodedArray = encodedText.split(',').map(Number);
            let decodedText = String.fromCharCode(...encodedArray);
            document.getElementById("decodedText").value = decodedText;
        }
    </script>
