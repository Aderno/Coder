        }
        .container {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            border-radius: 10px;
            text-align: center;
        }
        textarea, button {
            width: 100%;
            box-sizing: border-box;
            margin: 10px 0;
            padding: 10px;
        }
        textarea[readonly], button {
            background-color: #ccc;
            cursor: not-allowed;
        }
        button {
            background-color: #3498db;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }
        button:hover {
            background-color: #2980b9;
        }
        .animated-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }
        .animated-background::before {
            content: "";
            background: linear-gradient(45deg, #3498db, #e74c3c, #9b59b6, #e74c3c);
            background-size: 400% 400%;
